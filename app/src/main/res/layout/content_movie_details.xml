<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">
            <!--android:focusable="true"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"-->

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/details_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"/>


            <TextView
                android:id="@+id/details_title"
                android:textColor="@color/title"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_poster"/>

            <TextView
                android:id="@+id/details_year"
                android:textColor="@color/ano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_title"/>

            <TextView
                android:id="@+id/details_released"
                android:textColor="@color/ano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_year"/>

            <TextView
                android:id="@+id/details_runtime"
                android:textColor="@color/ano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_released"/>

            <TextView
                android:id="@+id/details_genre"
                android:textColor="@color/ano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_runtime"/>

            <TextView
                android:id="@+id/details_director"
                android:textColor="@color/ano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_genre"/>

            <TextView
                android:id="@+id/details_writer"
                android:textColor="@color/ano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_director"/>

            <TextView
                android:id="@+id/details_language"
                android:textColor="@color/ano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_writer" />

            <TextView
                android:id="@+id/details_awards"
                android:textColor="@color/ano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/details_language" />


        </RelativeLayout>
    </ScrollView>
</LinearLayout>